{
	"env": {
			"browser": true,
			"es6": true,
			"jest": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"parser": "babel-eslint",
	"parserOptions": {
			"ecmaFeatures": {
					"jsx": true
			},
			"ecmaVersion": 2018,
			"sourceType": "module"
	},
	"plugins": [
			"react"
	],
	"rules": {
			"indent": [
				"error",
				"tab",
				{
					"SwitchCase": 1
				}
			],
			"linebreak-style": [
					"error",
					"windows"
			],
			"quotes": [
					"error",
					"single"
			],
			"semi": [
					"error",
					"never"
			],
			"react/jsx-uses-vars": "error",
			"no-useless-catch": 1
	}
}